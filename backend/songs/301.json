{
  "number": 301,
  "title": "Kophaa Waaqayyo dhaaf",
  "category": "worship",
  "sections": [
    {
      "type": "VRS1",
      "lines": [
        "Kophaa Waaqayyo dhaaf",
        "Galanni haa'ii ta'uuf,",
        "Ayyaana guddaa fi jaalala,",
        "Isa nuuf kennuu fedhuuf,",
        "Inni biyya hundaaf kenne,",
        "Gammachuu fi nagaa guddaa",
        "Isaa, yaa namootaa gammadaa."
      ]
    },
    {
      "type": "VRS2",
      "lines": [
        "Nu'i galata siif galchina,",
        "Maqaa kees in guddifna,",
        "Yaa Abbaa kan nu jaallattee,",
        "Hunumaa nuuf kennitee,",
        "Waan hundumaas in abboomta,",
        "Kan ati hin argine hin jiru,",
        "Kan si sodaatu hin badu."
      ]
    },
    {
      "type": "VRS3",
      "lines": [
        "Yaa yesuus Ilma Waaqayyoo,",
        "Gadi deebii keenya beektee,",
        "Mararamtee gadi nuuf buute,",
        "Namummaa keef hin hille,",
        "Dhiiga kee fi du'a keetiinis,",
        "Funyoo cubbuttii nu hiiktee,",
        "Galatni siif haa ta'u."
      ]
    },
    {
      "type": "VRS4",
      "lines": [
        "Gooftaan keenya si duwwaa dha,",
        "Waaqa kan nu'iif bante,",
        "Dhiigni kee nu'iif dhangala'e",
        "Nu'i nagaa akka argatnutti,",
        "Ati kophaa kee Gooftaa keenya,",
        "Abdiin keenyas si kophaa dh,",
        "Yaa Gooftaa Yesuus Kiristoos."
      ]
    },
    {
      "type": "VRS5",
      "lines": [
        "Ati yaa Hafuura Qulqulluu,",
        "Keessa keenya jiraadhu,",
        "Garaa keenya jabeessi,",
        "Mana kee akka ta'u,",
        "Lubbuu keenya immoo qopheessi,",
        "Amantii keenya jabeessi",
        "Yesus kiristositti ameen!"
      ]
    }
  ]
}

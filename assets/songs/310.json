{
  "number": 310,
  "title": "Si haa galatu (2) yaa Abbaa ko, (2)",
  "sections": [
    {
      "type": "CHR",
      "lines": [
        "Si haa galatu (2) yaa Abbaa ko, (2)",
        "Si haa faarfatu (2) arrabni koo. (2)"
      ]
    },
    {
      "type": "VRS1",
      "lines": [
        "Gooftaa galata kee",
        "maqaan kee haa ulfaatu,",
        "Deebii kadhannaa isaa saba",
        "keef kan laattu,",
        "Kan si gaafataniif deebii dhugaa laattee,",
        "Eebbaa fi ayyaana kee saba keef baay'ifte."
      ]
    },
    {
      "type": "CHR",
      "lines": [
        "Si haa galatu (2) yaa Abbaa ko, (2)",
        "Si haa faarfatu (2) arrabni koo. (2)"
      ]
    },
    {
      "type": "VRS2",
      "lines": [
        "Bineensotni bakkee si galateeffatu,",
        "Uumamni harka keetii ulfina siif laatu,",
        "Teessoo keerra teessee kan diina ifattu,",
        "Yaa arja garraamii maqaan kee haa ulfatu."
      ]
    },
    {
      "type": "CHR",
      "lines": [
        "Si haa galatu (2) yaa Abbaa ko, (2)",
        "Si haa faarfatu (2) arrabni koo. (2)"
      ]
    },
    {
      "type": "VRS3",
      "lines": [
        "Waaqayyo kan Abrahaam",
        "isa kan Eliyaas,",
        "Iddoo hundumaattuu humna",
        "kee mul'isi,",
        "Qulqulluu hafuura keen ati",
        "nu qulleessi,",
        "Guyyuma guyyaatti kottuu",
        "nu haaressi."
      ]
    },
    {
      "type": "CHR",
      "lines": [
        "Si haa galatu (2) yaa Abbaa ko, (2)",
        "Si haa faarfatu (2) arrabni koo. (2)"
      ]
    },
    {
      "type": "VRS4",
      "lines": [
        "Galanni kan keeti yaa waaqayyoo Abbaa",
        "Saba keef ergitee irree kee isa jabaa,",
        "Diina dhidhimsitee saba kee baay'ifte,",
        "Hafuura kee dhugaa irratti dhangalaafte."
      ]
    },
    {
      "type": "CHR",
      "lines": [
        "Si haa galatu (2) yaa Abbaa ko, (2)",
        "Si haa faarfatu (2) arrabni koo. (2)"
      ]
    }
  ]

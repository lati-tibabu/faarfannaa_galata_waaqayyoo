{
  "number": 261,
  "title": "Amantiidhaan teenya",
  "category": "salvation",
  "sections": [
    {
      "type": "VRS1",
      "lines": [
        "Amantiidhaan teenya",
        "As biyya lafaa kana irra,",
        "Asii homaa hin qabnu",
        "Keenya'oo biyyi waaqa irra,",
        "Achi ka lafti biyya",
        "Gammachuu keenya hundaa,",
        "Yesus kan qopheesse",
        "Iddoo boqonnaa keenya hundaa."
      ]
    },
    {
      "type": "VRS2",
      "lines": [
        "Diinni keenya sun halkanii fi",
        "Guyyaa hin boqotu,",
        "Inni Addaamii fi Hewaaniin",
        "Gowwoomse hamma dhumaattuu,",
        "Iddoo lafa qannoo sana keessaa",
        "Akka isaan baase,",
        "Amma iyyuu inni jireenya keenyaaf",
        "Yoom nuuf ciise."
      ]
    },
    {
      "type": "VRS3",
      "lines": [
        "Kanaafis kottaa amantii",
        "Keenyatti jabatnee,",
        "Teenya malee hundee dhugaa",
        "Sanatti qabamnee,",
        "Yeroo utuu qabnuu kottaa",
        "Biyya keenyaa yaadnaa,",
        "Akka nu hin dhabsiifnetti",
        "Hawwiina biyya lafaa kanaa."
      ]
    },
    {
      "type": "VRS4",
      "lines": [
        "Yesus ulfina isaa fi",
        "Gooftummaa isaas immoo",
        "Dhiisee,",
        "Inni dhufee du'e nu furuuf",
        "Dhiiga isaa lolaasee,",
        "Yesus fayyisaan Gooftaan",
        "Mootiin abbaanfiriidhaa,",
        "Lubbuu nama hundaa",
        "Fayyisudhaaf badhadhaa dha."
      ]
    }
  ]
}

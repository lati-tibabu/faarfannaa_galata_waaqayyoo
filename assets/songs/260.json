{
  "number": 260,
  "title": "Kottaa yaa amantoota nana,",
  "category": "salvation",
  "sections": [
    {
      "type": "VRS1",
      "lines": [
        "Kottaa yaa amantoota nana,",
        "Amantii keenyaaf dammaqna",
        "Yeroo gaari utuu qabnuu,",
        "Guyyaa booddee gaabbuu",
        "Mannaa."
      ]
    },
    {
      "type": "VRS2",
      "lines": [
        "Namni foonii dagataa dha,",
        "Utuu dhaga'uu irraanfata,",
        "Guyyaa ergaan isa waamu,",
        "Gaafas cubbuu isaa in yaadata."
      ]
    },
    {
      "type": "VRS3",
      "lines": [
        "Lakkisaa kottaa in yaadatna,",
        "Hunduu isa facaase haamaa,",
        "Qalbii diddiirradhaa jedhee",
        "Innoo hunda keenya in waamaa."
      ]
    },
    {
      "type": "VRS4",
      "lines": [
        "Yaadni foonii hafuuf jira,",
        "Utuma baay'eetti abdannuu,",
        "Guyyaa dhufa Gooftaa hin beeknu,",
        "Lafa irraa guyyaa waamamnu."
      ]
    },
    {
      "type": "VRS5",
      "lines": [
        "Wanti hunduu darbuuf jira,",
        "Ijii namaas kan ilaalu,",
        "Gaafas namoonni in hubatu,",
        "Dubbiin Gooftaa akka caalu."
      ]
    },
    {
      "type": "VRS6",
      "lines": [
        "Guyyaan fayyinaa sun amma,",
        "Yeroon qalbii diddiirrannaa,",
        "Yoo dubbii Gooftaatti jabaanne,",
        "Gaafas abdii guddaa qabna."
      ]
    }
  ]
}
